{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"globals": {
		"__dirname": true,
		"window": true,
		"document": true,
		"localStorage": true,
		"CONFIG": true,
		"process": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": [
		"babel",
		"import",
		"jsx-a11y",
		"react",
		"react-hooks",
		"prettier"
	],
	"settings": {
		"react": {
			"version": "16.9.0"
		}
	},
	"rules": {
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn",
		"react/prop-types": "off",
		"no-trailing-spaces": 2,
		"semi": [2, "never"]
	}
}
